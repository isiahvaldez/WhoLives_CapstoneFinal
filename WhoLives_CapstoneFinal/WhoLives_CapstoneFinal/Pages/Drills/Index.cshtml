@page
@model WhoLives_CapstoneFinal.Pages.Drills.IndexModel
@{
    ViewData["Title"] = "Assemble Drill";
}

    <div class="border backgroundWhite container">
        <br />
        <div class="row">
            <div class="col-6">
                <h2 class="text-dark">Drill Assembly</h2>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <h4 class="text-primary">Drills in inventory: @(Model.drill.TotalLooseQty)</h4>
                <!-- TODO: Calculate number of drills that can be made with current inventory - IV 4/15/2020-->
                <h4 class="text-primary">Possible with current inventory: 0</h4>
            </div>
            <div class="col-6 text-right">
                <a asp-page="" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Assemble Drill</a>
            </div>
        </div>
        <br />
        <div class="row">
            <!-- Until we have an algorithm for counting the items inside assemblies, the total will be the same as the loose count - IV 4/1/2020-->
            <table id="DT_load_inventory" class="table table-striped table-bordered" style="table-layout:fixed; width:100%">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Loose Qty</th>
                        <th>Total Qty</th> <!-- Includes items in assemblies - IV 4/15/2020-->
                        <th>Needed</th> <!-- Also calculate how many are needed from the drill's build assembly list - IV 4/15/2020-->
                        <th>Ratio</th> <!-- Ratio of total item count to number needed-->
                    </tr>
                </thead>
            </table>
        </div>
    </div>

@section Scripts {
    <script src="~/js/drillassembly.js"></script>
}
