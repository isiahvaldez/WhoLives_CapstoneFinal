@page
@model WhoLives_CapstoneFinal.Pages.Inventory.IndexModel

<div class="border backgroundWhite container">
    <br />
    <div class="row">
        <div class="col-6">
            <h2>Inventory</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <div class="container">
        <br />
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav>
                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">All</a>
                            <a class="nav-item nav-link" id="nav-reorder-tab" data-toggle="tab" href="#nav-reorder" role="tab" aria-controls="nav-reorder" aria-selected="false">To Reorder</a>
                            <a class="nav-item nav-link" id="nav-assemblies-tab" data-toggle="tab" href="#nav-assemblies" role="tab" aria-controls="nav-assemblies" aria-selected="false">Assemblies</a>
                        </div>
                    </nav>

                    <div class="tab-content py-3 px-3 px-sm-0">
                        <div class="tab-pane fade show active " id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                            <table class="table-bordered table-striped" id="AllItem" style="width:100%">
                                <thead class="thead-dark table-bordered">
                                    <tr class="card-header">
                                        <th>Name</th>
                                        <th class="text-center">On Hand Qty</th>
                                        <th class="text-center">Reorder Qty</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                        <div class="tab-pane fade show " id="nav-reorder" role="tabpanel" aria-labelledby="nav-reorder-tab">
                            <div class="row" style="padding-bottom:16px;">
                                <div class="col-8">
                                    @Html.DropDownListFor(v => v.ItemAssemblyVendor.Vendor.VendorID,
                                Model.ItemAssemblyVendor.VendorList,
                                "---Please Select a Vendor---",
                                new { @class = "form-control js-example-basic-single"})
                                    <span id="vendorWarning" class="text-danger" asp-validation-for="ItemAssemblyVendor.Vendor.VendorID"></span>
                                </div>
                                <div class="col-4 text-right">
                                    <button class="btn btn-primary" asp-page="../PurchaseOrders/Upsert" onclick="PassSelection()">New Purchase Order</button>
                                </div>
                            </div>
                            @*<div><label>Please Select A Vendor</label><input type="text" placeholder="SelectVendor" /></div>*@
                            <table class="table-bordered table-striped" id="ReOrderTable" style="width:100%">
                                <thead class="thead-dark table-bordered">
                                    <tr class="card-header">
                                        <th class="text-center">Select</th>
                                        <th>Name</th>
                                        <th class="text-center">On Hand Qty</th>
                                        <th class="text-center">Reorder Qty</th>
                                        <th class="text-center">Vendor</th>
                                    </tr>
                                </thead>
                            </table>
                            

                        </div>
                        <div class="tab-pane fade show " id="nav-assemblies" role="tabpanel" aria-labelledby="nav-assemblies-tab">
                            <table class="table-bordered table-striped" id="AssembleDisassemble" style="width:100%">
                                <thead class="thead-dark table-bordered">
                                    <tr class="card-header">
                                        <th>Name</th>
                                        <th class="text-center">On Hand Qty</th>
                                        <th class="text-center">Reorder Qty</th>
                                        <th class="text-center">Assemble</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="popup">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                width: '100%' 
            });
        });
    </script>
    <script src="~/js/InventoryItem.js"></script>
}
