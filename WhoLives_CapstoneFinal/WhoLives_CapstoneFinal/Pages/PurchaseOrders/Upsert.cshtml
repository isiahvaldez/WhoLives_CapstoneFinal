@model WhoLives_CapstoneFinal.UpsertModel
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <br />
        <div class="container">
            <h1>@(Model.PurchaseOrderVM.OrderInfo.PurchaseOrderID != 0 ? "Update" : "Create") Order</h1>
            <div class="row">
                <div class="col-6 px-3 border py-2">
                    <!--Status Dropdown-->
                    <div class="px-3">
                        <label asp-for="PurchaseOrderVM.OrderInfo.Status" class="control-label">Status:</label><br />
                        @Html.DropDownListFor(m => m.PurchaseOrderVM.OrderInfo.Status,
                           Model.StatusList,
                           "-Select Status-",
                           new { @class = "form-control" })
                    </div>
                    <div class="px-3 py-2">
                        <label asp-for="PurchaseOrderVM.OrderInfo.VendorID">Vendor:</label>

                        @Html.DropDownListFor(m => m.PurchaseOrderVM.OrderInfo.VendorID,
                           Model.PurchaseOrderVM.VendorList,
                           "-Select Vendor-",
                           new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="PurchaseOrderVM.OrderInfo.VendorID" />
                    </div>
                </div>
                <div class="col-6 px-3 border py-2">
                    <!--Date group-->
                    <label asp-for="PurchaseOrderVM.OrderInfo.DateOrdered" class="control-label">Order Date:</label>
                    <input name="DateOrdered" asp-for="PurchaseOrderVM.OrderInfo.DateOrdered" class="form-control" />
                    <span asp-validation-for="PurchaseOrderVM.OrderInfo.DateOrdered" class="text-danger"></span>
                    <label asp-for="PurchaseOrderVM.OrderInfo.StatusChangeDate" class="control-label">Status Update:</label>
                    <input name="DateOrdered" asp-for="PurchaseOrderVM.OrderInfo.StatusChangeDate" class="form-control" />
                    <span asp-validation-for="PurchaseOrderVM.OrderInfo.StatusChangeDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 px-3 border py-2">
                    <!--PO #-->
                    <div class="px-3">
                        <label asp-for="PurchaseOrderVM.OrderInfo.PO" class="control-label">Vendor PO:</label>
                        <input name="VendorSKU" asp-for="PurchaseOrderVM.OrderInfo.PO" class="form-control" />
                        <span asp-validation-for="PurchaseOrderVM.OrderInfo.PO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 px-3 py-2 text-right align-text-bottom">
                    <label class="control-label">Export: </label>
                    <a class="btn" onclick="@Model.ExportCSV()" style="cursor:pointer; width: 100px"><i class="far fa-file-excel"></i></a>
                    <a class="btn"><i class="far fa-file-pdf"></i></a>
                </div>
            </div>
