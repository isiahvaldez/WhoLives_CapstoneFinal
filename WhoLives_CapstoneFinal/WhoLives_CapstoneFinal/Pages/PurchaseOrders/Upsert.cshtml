@model WhoLives_CapstoneFinal.Pages.PurchaseOrders.UpsertModel
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.PurchaseOrderVM.OrderInfo.PurchaseOrderID != 0)
        {
            <input type="hidden" asp-for="PurchaseOrderVM.OrderInfo.PurchaseOrderID" />
        }
        <div class="container">
            <h1>@(Model.PurchaseOrderVM.OrderInfo.PurchaseOrderID != 0 ? "Update" : "Create") Order</h1>
            <div class="form-group row">
                <div class="col-6 px-3 border py-2">
                    <!--Status Dropdown-->
                    <div class="px-3">
                        <label asp-for="PurchaseOrderVM.OrderInfo.Status"></label><br />
                        @Html.DropDownListFor(m => m.PurchaseOrderVM.OrderInfo.Status,
                           Model.StatusList,
                           "-Select Status-",
                           new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="PurchaseOrderVM.OrderInfo.Status" />
                    </div>
                    <div class="px-3 py-2 form-group">
                        <label asp-for="PurchaseOrderVM.OrderInfo.VendorID"></label>
                        <i class="fa fa-plus-circle btn"></i>
                        @Html.DropDownListFor(m => m.PurchaseOrderVM.OrderInfo.VendorID,
                           Model.PurchaseOrderVM.VendorList,
                           "-Select Vendor-",
                           new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="PurchaseOrderVM.OrderInfo.VendorID" />
                    </div>
                </div>
                <div class="col-6 px-3 border py-2">
                    <!--Date group-->
                    <div class="form-group">
                        <label asp-for="PurchaseOrderVM.OrderInfo.DateOrdered"></label>
                        <input name="DateOrdered" asp-for="PurchaseOrderVM.OrderInfo.DateOrdered" class="form-control" />
                        <span asp-validation-for="PurchaseOrderVM.OrderInfo.DateOrdered" class="text-danger"></span>
                    </div>
                    <label asp-for="PurchaseOrderVM.OrderInfo.StatusChangeDate"></label>
                    <input asp-for="PurchaseOrderVM.OrderInfo.StatusChangeDate" class="form-control" readonly />
                    <span asp-validation-for="PurchaseOrderVM.OrderInfo.StatusChangeDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-5 px-3 border py-2">
                    <!--PO #-->
                    <div class="px-3 form-group">
                        <label asp-for="PurchaseOrderVM.OrderInfo.PO"></label>
                        <input asp-for="PurchaseOrderVM.OrderInfo.PO" class="form-control" />
                        <span asp-validation-for="PurchaseOrderVM.OrderInfo.PO" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 px-3 py-2 text-right align-text-bottom">
                    <label class="control-label">Export: </label>
                    <a class="btn" @*onclick="@Model.ExportCSV()"*@ style="cursor:pointer; width: 100px"><i class="far fa-file-excel"></i></a>
                    <a class="btn"><i class="far fa-file-pdf"></i></a>
                </div>
            </div>
            @*<table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Order Quantity</th>
                            <th>Price per unit</th>
                            <th>Received Quantity</th>
                        </tr>
                    </thead>
                </table>*@
            <!--Manual table until I can figure out a good way to edit the datatable-->
            <div class="row border p-3 mb-3" style="height:50vh;overflow:auto;">
                <table id="iTable" class="table table-striped">
                    <thead class="thead-dark table-primary table-bordered border-primary">
                        <tr class="card-header">
                            <th>Item</th>
                            <th>Quantity Ordered</th>
                            <th>Price</th>
                            <th>Quantity Received</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="table">
                        @if (Model.PurchaseOrderVM.OrderInfo.OrderItems.Count() > 0)
                        {
                            @for (var i = 0; i < Model.PurchaseOrderVM.OrderInfo.OrderItems.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        @Html.DropDownListFor(m =>
                                             m.PurchaseOrderVM.OrderInfo.OrderItems[i].ItemID,
                                             Model.PurchaseOrderVM.ItemList,
                                             "-Select Item-",
                                             new { @class = "form-control" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PurchaseOrderVM.OrderInfo.OrderItems[i].QuantityOrdered)
                                        @*<input asp-for="PurchaseOrderVM.OrderInfo.OrderItems[i].QuantityOrdered" />*@
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PurchaseOrderVM.OrderInfo.OrderItems[i].Price)
                                        @*<input asp-for="PurchaseOrderVM.OrderInfo.OrderItems[i].Price" />*@
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.PurchaseOrderVM.OrderInfo.OrderItems[i].QuantityReceived)
                                        @*<input asp-for="PurchaseOrderVM.OrderInfo.OrderItems[i].QuantityReceived" />*@
                                    </td>
                                    <td><a class="btn" onclick="Remove(this)"><i class="far fa-trash"></i></a></td>
                                </tr>
                            }
                            @*@foreach (var i in Model.PurchaseOrderVM.OrderInfo.OrderItems)
                                {
                                    var itemId = @i.ItemID;
                                    <tr>
                                        <td>
                                            @Html.DropDownListFor(m =>
                                                 m.PurchaseOrderVM.OrderInfo.OrderItems.Where(o => o.ItemID == itemId).
                                                 Select(s => s.Item.InventoryItemID).ToList()[0],
                                                 Model.PurchaseOrderVM.ItemList,
                                                 "-Select Item-",
                                                 new { @class = "form-control" })
                                        </td>
                                        <td>
                                            <input asp-for="@i.QuantityOrdered" />
                                        </td>
                                        <td>
                                            <input asp-for="@i.Price" />
                                        </td>
                                        <td>
                                            <input asp-for="@i.QuantityReceived">
                                        </td>
                                        <td><a class="btn" onclick="Remove(this)"><i class="far fa-trash-alt"></i></a></td>
                                    </tr>
                                }*@
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><a class="btn" onclick="Add()"><i class="fa fa-plus"></i></a></td>
                        </tr>
                    </tbody>
                    @*<tfoot>
                            <tr>
                                <td><select id="iName" name="ItemID" asp-for="TempOrderItem.Item" class="form-control" asp-items="@ViewBag.Items"></select></td>
                                <td><input id="iQty" name="QuantityOrdered" asp-for="TempOrderItem.QuantityOrdered" min="0" type="number" class="form-control" /></td>
                                <td class="form-inline">$<input id="iPrice" name="Price" asp-for="TempOrderItem.Price" class="form-control" /></td>
                                <td><input type="button" id="btnAdd" class="btn btn-primary" value="Add" /></td>
                            </tr>
                        </tfoot>*@
                </table>
            </div>
            <!--Price-->
            @*<div class="col-2 px-3 row form-group align-content-center">
                <label class="control-label" asp-for="PurchaseOrderVM.OrderInfo.TotalPrice">Total Price:</label>
                    <input name="totalprice" asp-for="PurchaseOrderVM.OrderInfo.TotalPrice" class="form-control" readonly />
                    <span asp-validation-for="PurchaseOrderVM.OrderInfo.TotalPrice" class="text-danger"></span>
                </div>*@

            <div class="form-group row">
                <div class="col-9 offset-2">
                    <div class="row">
                        <div class="col-6">
                            @if (Model.PurchaseOrderVM.OrderInfo.PurchaseOrderID != 0)
                            {
                                <button type="submit" id="btnSave" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                        <button type="submit" id="btnSave" class="btn btn-primary form-control">@(Model.PurchaseOrderVM.OrderInfo.PurchaseOrderID != 0 ? "Update" : "Create")</button>
                            }
                        </div>
                        <div class="col-6">
                            <a asp-page="./Index" class="btn btn-warning form-control">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

