@page
@model WhoLives_CapstoneFinal.IndexModel

@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <br />
    <div class="container">
        <h3>Orders</h3>
        <div class="row">
            <div class="col-12 ">
                <div class="py-3 px-3 px-sm-0">
                    <div class="fade show active">
                        @if (Model.PurchaseOrders.Count() == 0)
                        {
                            //handled by datatable, consider removing
                            <h4 class="col-12 text-center">No purchase orders to display.</h4>
                        }
                        else
                        {
                            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Vendor</th>
                                        <th>PO</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="/PurchaseOrders/Upsert"><i class="fa fa-plus-circle" style="font-size:48px"></i></a>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}
