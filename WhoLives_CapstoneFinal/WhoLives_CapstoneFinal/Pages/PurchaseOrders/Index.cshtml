@page
@model WhoLives_CapstoneFinal.IndexModel

<div class="border backgroundWhite container">
    <br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-dark">Orders</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <div class="col-3 offset-9 text-right">
        @Html.DropDownListFor(m => m.StatusList,
           Model.StatusList,
           "-Filter Status-",
           new { @class = "form-control" })
    </div>
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Vendor</th>
                <th>PO</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/order.js" page-type="index"><meta name="page-type" content="index" /></script>
}
