@page
@model WhoLives_CapstoneFinal.Pages.Vendor.UpsertModel
@{
    ViewData["Title"] = "Manage Vendor";
}

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.VendorObj.VendorID != 0)
            {
                <input type="hidden" asp-for="VendorObj.VendorID" />
            }
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <br />
                <h2 class="text-dark">@(Model.VendorObj.VendorID != 0 ? "Update" : "Create") Vendor</h2>
            </div>
            <div class="col-lg-6 col-md-12 pt-3">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="VendorObj.VendorName"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="VendorObj.VendorName" autofocus />
                        <span class="text-danger" asp-validation-for="VendorObj.VendorName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="VendorObj.VendorWebsite"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="VendorObj.VendorWebsite" />
                        <span class="text-danger" asp-validation-for="VendorObj.VendorWebsite"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="VendorObj.PhoneNumber"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="VendorObj.PhoneNumber" />
                        <span class="text-danger" asp-validation-for="VendorObj.PhoneNumber"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9">
                        <div class="row">
                            <div class="col-5">
                                <button type="submit" class="btn btn-primary form-control">@(Model.VendorObj.VendorID != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-5">
                                <a asp-page="./Index" class="btn btn-warning form-control">Go Back</a>
                            </div>
                            <div class="col-2">
                                <a onclick="Delete('/api/vendororder/'+@Model.VendorObj.VendorID )" class="btn btn-danger form-control text-white" style="width:40px;"><i class="far fa-trash-alt"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border backgroundWhite container col-lg-6 col-md-12 pt-3">
                <h4>Purchase Orders</h4>
                <br />
                @if(Model.VendorObj.VendorID != 0) {
                <table id="DT_load" class="table table-striped table-bordered" style="table-layout:fixed; width:100%">
                    <thead>
                        <tr>
                            <th>PO</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
                }
                else
                {
                    <div class="text-center">No orders to show</div>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/vendororder.js"></script>
}

