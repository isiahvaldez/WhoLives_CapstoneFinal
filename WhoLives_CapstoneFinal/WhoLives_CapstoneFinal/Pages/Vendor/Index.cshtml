@page
@model WhoLives_CapstoneFinal.Pages.Vendor.IndexModel
@{
    ViewData["Title"] = "Vendor";
}

<div class="border backgroundWhite container">
    <br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-dark">Vendors</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <table id="DT_load" class="table table-striped table-bordered" style="table-layout:fixed; width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Website</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/vendor.js"></script>
}
